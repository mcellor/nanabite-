.view_operate{
    padding: 0px 10px;
    display: flex;
}

.btn_operate{
    width: 30%;
    color: gray;
    font-size: 1em;
    text-align: center;
    padding: 5px 10px;
    line-height: 1.5em;
}
.btn_operate:active{
    background: #ebebeb;
}
.ic_operate{
    width: 1em;
    height: 1em;
