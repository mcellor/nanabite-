.wenben1, .wenben2, .wenben3 {
  font-size: 30rpx;
  color: #595959;
  letter-spacing: 1px;
  margin-top: 40rpx;
  display: block;
}
.biaoti {
  padding-left: 120rpx;
  padding-right: 120rpx;
  display: block;
  margin-top: 30rpx;
  font-size: 40rpx;
  text-align: center;
}
.content-topics {
  padding-bottom: 30rpx;
}
.topics-title {
  margin: 0 auto;
  font-size: 40rpx;
  color: #333;
  font-weight: lighter;
  padding-top: 30rpx;
}
.topice-user {
  font-size: 28rpx;
  margin: 0 auto;
  color: #999;
  font-weight: lighter;
  padding-top: 10rpx;
}
.sentence-info {
  font-size: 34rpx;
  text-align: left;
  line-height: 60rpx;
  color: #333;
  font-weight: lighter;
}
.share-ui-row {
  width: 80%;
  margin: 0 auto;
  border-top: 2rpx solid #f5f5f5;
}
.share-ui-row .share-content-box {
  width: 70%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.share-ui-row .share-content-box image {
  width: 80rpx;
  height: 80rpx;
}
.share-ui-row .share-content-box button {
  position: absolute;
  opacity: 0;
  width: 100%;
  height: 100%;
}
.ui-row {
  position: relative;
  flex: 1;
  display: flex;
  justify-content: center;
}
.ui-col-align-left {
  text-align: left;
}
.ui-col {
  position: relative;
  min-width: 0;
  display: flex;
  flex: 1;
  height: 100%;
}
.ui-col-align-right {
  text-align: right;
}
.ui-col.valign-middle {
  align-items: center;
}
.ui-col-content {
  height: 100%;
  min-width: 0;
  flex-direction: column;
  width: 100%;
  display: flex;
}

.ui-col-content.align-left {
  align-items: flex-start;
}
.ui-col.align-right {
  justify-content: flex-end;
}
