.body {
  padding: 0px 50rpx;
}
/*特别推荐属性  */

.title0 {
  color: #000;
  font-size: 40rpx;
  font-weight: 900;
  margin-top: 34rpx;
  display: block;
}
/*自媒体联动小程序属性  */

.title2 {
  color: #d4d2d4;
  font-size: 30rpx;
  display: block;
  padding-top: 10rpx;
}
.bg {
  width: 750rpx;
  height: 100%;
  position: absolute;
}

.namebox {
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #828282;
  margin-top: 30rpx;
  padding-bottom: 70rpx;
}

.name {
  font-size: 33rpx;
  color: #2f2f2f;
  float: left;
}

.nameicon {
  width: 18rpx;
  height: 32rpx;
  float: right;
  padding-top: 8rpx;
  padding-right: 5rpx;
}
.basic {
  padding-left: 20px;
  display: block;
  padding-right: 40rpx;
  width: 100%;
}
.field{
  position: relative;
  z-index: 1;
  font-size: 33rpx;
  color: #828282;
  float: right;
  padding-right: 25rpx;
  text-align: right;
}
.back {
  margin-top:10px;
  font-size: 30rpx;
  color: #000;
  display: block;
  text-align: center;
  line-height: 70rpx;
  width: 130rpx;
  height: 70rpx;
  background-color: rgba(255, 255, 255, 0);
  border: 3rpx solid #000;
  border-radius: 25rpx;
  left: 50%;
  margin-left: -65rpx;
}